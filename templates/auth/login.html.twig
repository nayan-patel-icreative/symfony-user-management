{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>{{ 'login.welcome_back'|trans }}
                    </h2>
                    <p class="text-muted">{{ 'login.sign_in_to_account'|trans }}</p>
                </div>

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form action="{{ path('app_login') }}" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label fw-semibold">{{ 'login.email_address'|trans }}</label>
                        <input type="email" name="email" id="email" class="form-control" 
                               placeholder="{{ 'login.email_placeholder'|trans }}" value="{{ last_username }}" 
                               autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label fw-semibold">{{ 'login.password'|trans }}</label>
                        <div class="input-group">
                            <input type="password" name="password" id="password" class="form-control" 
                                   placeholder="{{ 'login.password_placeholder'|trans }}" autocomplete="current-password" required>
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('password')">
                                <i class="fas fa-eye" id="password_icon"></i>
                            </button>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>{{ 'login.sign_in_button'|trans }}
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="mb-0 text-muted">
                        {{ 'login.no_account'|trans }}
                        <a href="{{ path('app_register') }}" class="text-primary text-decoration-none fw-semibold">
                            {{ 'login.create_account'|trans }}
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function togglePassword(fieldId) {
    const passwordField = document.getElementById(fieldId);
    const icon = document.getElementById(fieldId + '_icon');
    
    if (passwordField.type === 'password') {
        passwordField.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
    } else {
        passwordField.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
    }
}
</script>
{% endblock %}
