<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ 'common.app_name'|trans }}{% endblock %}</title>
    <link rel="shortcut icon" href="{{ absolute_url('favicon.svg') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_user_index') }}">{{ 'nav.brand'|trans }}</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <div class="navbar-nav me-auto">
                {% if app.user %}
                    <a class="nav-link" href="{{ path('app_user_index') }}">
                        <i class="fas fa-users me-1"></i>{{ 'nav.users'|trans }}
                    </a>
                    <a class="nav-link position-relative" href="{{ path('app_notifications') }}">
                        <i class="fas fa-bell me-1"></i>{{ 'nav.notifications'|trans }}
                        {% set unreadCount = app.user.notifications|filter(n => not n.isRead)|length %}
                        {% if unreadCount > 0 %}
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                {{ unreadCount }}
                                <span class="visually-hidden">{{ 'nav.unread_notifications'|trans }}</span>
                            </span>
                        {% endif %}
                    </a>
                {% endif %}
            </div>
            <div class="navbar-nav">
                <!-- Language Switcher -->
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe me-1"></i>{{ app.request.locale|upper }}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                        <li>
                            <a class="dropdown-item {% if app.request.locale == 'en' %}active{% endif %}" 
                               href="{{ path('app_language_switch', {'_locale': 'en'}) }}">
                                üá∫üá∏ English
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item {% if app.request.locale == 'hi' %}active{% endif %}" 
                               href="{{ path('app_language_switch', {'_locale': 'hi'}) }}">
                                üáÆüá≥ ‡§π‡§ø‡§®‡•ç‡§¶‡•Ä
                            </a>
                        </li>
                    </ul>
                </div>
                
                {% if app.user %}
                    <span class="navbar-text me-3">
                        <i class="fas fa-user me-1"></i>{{ app.user.name }}
                    </span>
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <i class="fas fa-sign-out-alt me-1"></i>{{ 'nav.logout'|trans }}
                    </a>
                {% else %}
                    <a class="nav-link" href="{{ path('app_login') }}">
                        <i class="fas fa-sign-in-alt me-1"></i>{{ 'nav.login'|trans }}
                    </a>
                    <a class="nav-link" href="{{ path('app_register') }}">
                        <i class="fas fa-user-plus me-1"></i>{{ 'nav.register'|trans }}
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>

<div class="container mt-4">
    {% block body %}{% endblock %}
</div>

{% for type, messages in app.flashes %}
    {% for message in messages %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                {% if type == 'success' %}
                    Swal.fire({
                        icon: 'success',
                        title: '{{ 'flash.success_title'|trans }}',
                        text: '{{ message|raw }}',
                        timer: 3000,
                        timerProgressBar: true,
                        showConfirmButton: false,
                        position: 'top-end',
                        toast: true
                    });
                {% elseif type == 'error' %}
                    Swal.fire({
                        icon: 'error',
                        title: '{{ 'flash.error_title'|trans }}',
                        text: '{{ message|raw }}',
                        timer: 5000,
                        timerProgressBar: true,
                        showConfirmButton: false,
                        position: 'top-end',
                        toast: true
                    });
                {% elseif type == 'warning' %}
                    Swal.fire({
                        icon: 'warning',
                        title: '{{ 'flash.warning_title'|trans }}',
                        text: '{{ message|raw }}',
                        timer: 4000,
                        timerProgressBar: true,
                        showConfirmButton: false,
                        position: 'top-end',
                        toast: true
                    });
                {% elseif type == 'info' %}
                    Swal.fire({
                        icon: 'info',
                        title: '{{ 'flash.info_title'|trans }}',
                        text: '{{ message|raw }}',
                        timer: 3000,
                        timerProgressBar: true,
                        showConfirmButton: false,
                        position: 'top-end',
                        toast: true
                    });
                {% endif %}
            });
        </script>
    {% endfor %}
{% endfor %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
